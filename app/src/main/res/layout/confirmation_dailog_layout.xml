<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dimen_20"
    android:padding="@dimen/dimen_20"
    android:background="@drawable/popup_rounded_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_regular"
            android:id="@+id/title"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/dimen_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/okBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textSize="@dimen/common_btn_text_size"
                android:background="@drawable/round_btn_shape"
                android:layout_gravity="center"
                android:fontFamily="@font/calibri_regular"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/dimen_3"
                android:paddingTop="@dimen/dimen_3"
                android:layout_marginRight="@dimen/dimen_10"
                android:gravity="center"/>

             <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                 android:paddingBottom="@dimen/dimen_3"
                 android:paddingTop="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textSize="@dimen/common_btn_text_size"
                android:background="@drawable/round_btn_shape_white"
                android:layout_gravity="center"
                android:fontFamily="@font/calibri_regular"
                android:textColor="@color/black"
                android:gravity="center"/>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>